<%- include('../partials/header')%>
<section>
    <div class="container text-center">
        <h1>Add a New Comment to <%= camp.name %></h1>
        <div class="w-100">
            <form action="/campgrounds/<%=camp._id%>/comments" method="post">
                <div class="form-group w-50 mx-auto">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Comment">
                </div>
                <div class="form-group w-50 mx-auto">
                    <input class="form-control btn btn-primary" type="submit" value="Submit">
                </div>
            </form>
            <a href="views/campgrounds">View Current Camps</a><br>
            <a href="/">Go to Homepage</a>
        </div>

    </div>
</section>
<%- include('../partials/footer')%>