<%- include('../partials/header')%>
<section>
    <div class="container text-center">
        <h1>Add a New Comment to <%= camp.name %> Post</h1>
        <div class="row">
            <div class="col-10 col-sm-9 col-md-6 mx-auto">
                <form action="/campgrounds/<%=camp._id%>/comments" method="post">
                    <div class="form-group">
                        <textarea class="form-control" name="comment[text]" rows="2" placeholder="write your comment..."></textarea>
                    </div>
                    <div class="form-group">
                        <input class="form-control btn btn-primary" type="submit" value="Add comment">
                    </div>
                </form>
                <a href="/campgrounds">View Current Camps</a><br>
                <a href="/">Go to Homepage</a>
            </div>
        </div>
    </div>
</section>
<%- include('../partials/footer')%>


