<%- include('../partials/header')%>
<section>
    <div class="container text-center">
        <h1>Edit Comment</h1>
        <div class="row">
            <div class="col-10 col-sm-9 col-md-6 mx-auto">
                <form action="/campgrounds/<%=campId%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <textarea class="form-control" name="comment[text]" rows="2" placeholder="type your comment..."><%= comment.text%></textarea>
                    </div>
                    <div class="form-group">
                        <input class="form-control btn btn-primary" type="submit" value="Edit Comment">
                    </div>
                </form>
                <a href="/campgrounds">View Current Camps</a><br>
                <a href="/">Go to Homepage</a>
            </div>
        </div>
    </div>
</section>
<%- include('../partials/footer')%>