<%- include('../partials/header')%>
<section>
    <div class="container text-center">
        <h1>Edit Comment</h1>
        <div class="w-100">
            <form action="/campgrounds/<%=campId%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group w-50 mx-auto">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text%>">
                </div>
                <div class="form-group w-50 mx-auto">
                    <input class="form-control btn btn-primary" type="submit" value="Edit">
                </div>
            </form>
            <a href="/campgrounds">View Current Camps</a><br>
            <a href="/">Go to Homepage</a>
        </div>

    </div>
</section>
