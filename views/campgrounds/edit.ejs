<%- include('../partials/header')%>
<section>
    <div class="container text-center">
        <h1>Edit <%=camp.name%> Camp Information</h1>
        <div class="w-100">
            <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
                <div class="form-group w-50 mx-auto">
                    <input class="form-control" type="text" name="name" placeholder="Camp Name" value="<%=camp.name%>">
                </div>
                <div class="form-group w-50 mx-auto">
                    <input class="form-control" type="text" name="image" placeholder="Image Url" value="<%=camp.image%>">
                </div>
                <div class="form-group w-50 mx-auto">
                    <input class="form-control" type="number" name="price" value="<%=camp.price%>" placeholder="Price Per Night In USD" min="0" step="1">
                </div>

                <div class="form-group w-50 mx-auto">
                    <input class="form-control" type="text" name="description" placeholder="description" value="<%=camp.description%>">
                </div>

                <div class="form-group w-50 mx-auto">
                    <input class="form-control btn btn-primary" type="submit" value="Edit">
                </div>
            </form>
            <a href="views/campgrounds">View Current Camps</a><br>
            <a href="/">Go to Homepage</a>
        </div>
    </div>
</section>
<%- include('../partials/footer')%>