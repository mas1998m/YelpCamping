<%- include('../partials/header')%>
<section>
    <div class="container text-center">
        <h1>Submit a New Camp</h1>
        <div class="row ">
            <div class="col-10 col-sm-9 col-md-6 mx-auto">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="Camp Name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="Image Url">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="price" placeholder="Price Per Night In USD" min="0" step="1">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="description" placeholder="description" rows="3"></textarea>
                    </div>

                    <div class="form-group">
                        <input class="form-control btn btn-primary" type="submit" value="Add New Camp">
                    </div>
                </form>
                <a href="views/campgrounds">View Current Camps</a><br>
                <a href="/">Go to Homepage</a>
            </div>
        </div>
    </div>
</section>
<%- include('../partials/footer')%>